<div class="page-header">
  <%= link_to new_city_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New City
  <% end %>
  <h1 Listing>cities</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>City name</th>
        <th>State</th>
        <th>Us city</th>
        <th>Population</th>
        <th>One hundred pct by</th>
        <th>Co2 emissions perannum</th>
        <th>Wind</th>
        <th>Solar</th>
        <th>Other energy source</th>
        <th>Image data</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td><%= city.state %></td>
        <td><%= city.us_city %></td>
        <td><%= city.population %></td>
        <td><%= city.one_hundred_pct_by %></td>
        <td><%= city.co2_emissions_perannum %></td>
        <td><%= city.wind %></td>
        <td><%= city.solar %></td>
        <td><%= city.other_energy_source %></td>
        <td><%= city.image_data %></td>
        <td>
          <%= link_to city do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_city_path(city) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to city, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
